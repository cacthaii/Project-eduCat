<!doctype html>
<html>
  <head>
    <title><%=siteName%></title>
  </head>
  <body>
    <h1>About <%=siteName%></h1>
    <p>The revision hub for all whom are interested in the purr~suit of knowledge!</p>
    <p>We offer  mathematic revision materials for these subjects at GCSE level!</p>
    <% if (availableModules && availableModules.length > 0) { %>
      <ul>
        <% availableModules.forEach(function(module) { %>
          <li>
            <a href="/module/<%= module.module_id %>">
              <%= module.module_name %> - <%= module.description %>
            </a>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No modules currently available.</p>
    <% } %>
  </body>
</html>
